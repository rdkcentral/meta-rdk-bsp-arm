+        fprintf(nat_fp, "-A %s -o %s -p udp -j SNAT --to-source %s:%d-%d\n", MAPT_NAT_IPV4_POST_ROUTING_TABLE, current_wan_ifname, ipaddress_str, initialPortValue,finalPortValue);
